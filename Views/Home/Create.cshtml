@model UrlCompressorService.Models.UrlEntry

@{
    ViewData["Title"] = "Create";
}

<h2>Create short url</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LongUrl" class="control-label"></label>
                <input asp-for="LongUrl" class="form-control" />
                <span asp-validation-for="LongUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>

        @{  
            var shortUrl = string.Empty;
            if (Model?.ShortUrl != null)
            {
                shortUrl = Model.ShortUrl;
            }
            @Html.Label("ShortUrl", shortUrl)
        }
    </div>
</div>

<div>
    <a asp-action="Index">To list of entries</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
